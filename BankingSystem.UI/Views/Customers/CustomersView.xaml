<UserControl x:Class="BankingSystem.UI.Views.CustomersView" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <DockPanel>
            <StackPanel Margin="20">
                <TextBlock Text="Customers" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Add Customer" Command="{Binding CreateCustomerCommand}" Width="150"/>
                    <Button Content="Edit Customer" Command="{Binding UpdateCustomerCommand}" Width="150"/>
                </StackPanel>
                <DataGrid ItemsSource="{Binding Customers}"
                          SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                          AutoGenerateColumns="True"
                          Margin="0,10,0,0"
                          IsReadOnly="True"
                          SelectionMode="Single"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>

