<UserControl x:Class="BankingSystem.UI.Views.CustomersView" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <DockPanel>
            <StackPanel Margin="20">
                <TextBlock Text="Customers" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <Button Content="Add Customer" Command="{Binding CreateCustomerCommand}" Width="150"/>
                <DataGrid ItemsSource="{Binding Customers}" AutoGenerateColumns="True" Margin="0,10,0,0"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>

