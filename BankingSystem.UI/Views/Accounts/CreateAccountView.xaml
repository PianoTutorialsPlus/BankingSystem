<Window x:Class="BankingSystem.UI.Views.CreateAccountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Account" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel Width="300">

            <TextBlock Text="Select Customer" />
            <ComboBox ItemsSource="{Binding Customers}"
                      SelectedValue="{Binding Account.CustomerId, Mode=TwoWay}"
                      SelectedValuePath="Id"
                      DisplayMemberPath="FullName"
                      Margin="0,0,0,10"
                      IsEditable="False"/>

            <TextBlock Text="Initial Deposit" />
            <TextBox Text="{Binding Account.InitialDeposit, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Command="{Binding SaveCommand}" Width="100" Margin="0,0,10,0"/>
                <Button Content="Cancel" IsCancel="True" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
