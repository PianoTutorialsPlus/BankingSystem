<UserControl x:Class="BankingSystem.UI.Views.AccountsView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top">
                <Button Content="Load" Command="{Binding LoadCommand}" />
                <Button Content="Create Account" Command="{Binding CreateAccountCommand}" />
            </ToolBar>

            <DataGrid ItemsSource="{Binding Accounts}" AutoGenerateColumns="True" />
        </DockPanel>
    </Grid>
</UserControl>

