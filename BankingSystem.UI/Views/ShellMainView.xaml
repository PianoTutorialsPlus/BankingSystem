<Window x:Class="BankingSystem.UI.Views.ShellMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BankingSystem.UI.Views"
        xmlns:customers="clr-namespace:BankingSystem.UI.ViewModels.Customers"
        xmlns:viewModels="clr-namespace:BankingSystem.UI.ViewModels"
        DataContext="{Binding ShellMainViewModel, Source={StaticResource Locator}}"
        Title="Banking System" Height="700" Width="1100">
    <Window.Resources>
        <DataTemplate DataType="{x:Type customers:CustomersViewModel}">
            <views:CustomersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:AccountsViewModel}">
            <views:AccountsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:TransactionsViewModel}">
            <views:TransactionsView/>
        </DataTemplate>
    </Window.Resources>
    
    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Width="220" Background="#f5f5f5">
            <TextBlock Text="Banking System" Margin="12" FontSize="18" FontWeight="Bold"/>
            <Button Content="Customers" Margin="8" Command="{Binding NavigateCustomersCommand}" />
            <Button Content="Accounts" Margin="8" Command="{Binding NavigateAccountsCommand}" />
            <Button Content="Transactions" Margin="8" Command="{Binding NavigateTransactionsCommand}" />
        </StackPanel>

        <ContentControl Content="{Binding CurrentViewModel}" />
    </DockPanel>
</Window>

