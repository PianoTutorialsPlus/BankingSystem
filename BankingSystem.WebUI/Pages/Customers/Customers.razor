@page "/customers"
@inject NavigationManager Nav

<h3>Customers</h3>

<button class="btn btn-success mb-3" @onclick="@(() => Nav.NavigateTo("/customers/create"))">
    + New Customer
</button>

@if (CustomersVM == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in CustomersVM)
            {
                <tr>
                    <td>@c.FirstName</td>
                    <td>@c.LastName</td>
                    <td>@c.EmailAddress</td>
                </tr>
            }
        </tbody>
    </table>
}


